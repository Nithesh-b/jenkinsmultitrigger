pipeline {
  options {
	  timeout(time: 1, unit: 'HOURS')
}
  agent any
  parameters {
      choice(name: "mode", choices: ["debug", "deploy", "release"],    description: "Mode (debug|release|deploy)")
      }
  stages {
    stage('Code Build and Deploy') {
          steps {
		  timeout(time: 1, unit: 'MINUTES') {
		  sh "echo 'Hello World'"
		  }
	  }
	}
	stage ('Trigger another job') {
	steps{
	             build job: 'version'
		     }
  	}
	}
}
